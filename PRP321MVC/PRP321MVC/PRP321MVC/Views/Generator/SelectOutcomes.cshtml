
@{
    ViewBag.Title = "SelectOutcomes";
}
@model PRP321MVC.Models.QuestionsSelectionModel

@using (Html.BeginForm("FinishUp", "Generator", "Post"))
{

    List<SelectListItem> selectLists = new List<SelectListItem>();

    foreach (PRP321MVC.Models.OutcomeDetailsModel item in Model.outcomeDetailsListRelavent)
    {
        selectLists.Add(new SelectListItem { Text = item.Material, Value = item.Material });
    }

    for (int i = 0; i < Model.NumberOfQuestions; i++)
    {
        <br />
        <label name="QuestionType" + i>@Model.TypesOfQuestion[i]</label>

        <br />

        <input type="number" name="NumberOFQuestionsPerQuestion @i" min="1" max="200" value="1">

        <br />

        

        @Html.DropDownList("OutcomeChoosen"+i,selectLists)
        <br />
    }

    <button type="submit" >Finish Up</button>


